@model Core_Proje.Areas.Writer.Models.UserRegisterViewModel 
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <title>Skydash Admin</title>
    <link rel="stylesheet" href="~/skydash/vendors/feather/feather.css">
    <link rel="stylesheet" href="~/skydash/vendors/ti-icons/css/themify-icons.css">
    <link rel="stylesheet" href="~/skydash/vendors/css/vendor.bundle.base.css">
    <link rel="stylesheet" href="~/skydash/css/vertical-layout-light/style.css">
    <link rel="shortcut icon" href="~/skydash/images/favicon.png" />
</head>

<body>
  <div class="container-scroller">
    <div class="container-fluid page-body-wrapper full-page-wrapper">
      <div class="content-wrapper d-flex align-items-center auth px-0">
        <div class="row w-100 mx-0">
          <div class="col-lg-4 mx-auto">
            <div class="auth-form-light text-left py-5 px-4 px-sm-5">
              <div class="brand-logo">
                                <img src="~/skydash/images/logo.svg" alt="logo">
              </div>
              <h4>Bir Hesabın Yok mu?</h4>
              <h6 class="font-weight-light">Hemen kayıt olun!</h6>
              <form class="pt-3" method="post">
              <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                  <label>Adınız</label>
                  <span asp-validation-for="Name" class="text-danger"></span>
                  <input type="text" asp-for="Name" class="form-control" />
                </div>
                <div class="form-group">
                    <label>Soyadınız</label>
                    <span asp-validation-for="Surname" class="text-danger"></span>
                    <input type="text" asp-for="Surname" class="form-control" />
                </div>
                <div class="form-group">
                    <label>Kullanıcı Adınız</label>
                    <span asp-validation-for="UserName" class="text-danger"></span>
                    <input type="text" asp-for="UserName" class="form-control" />
                </div>
                <div class="form-group">
                    <label>Görsel Url</label>
                    <span asp-validation-for="ImageUrl" class="text-danger"></span>
                    <input type="text" asp-for="ImageUrl" class="form-control" />
                </div>
                <div class="form-group">
                    <label>Şifreniz</label>
                    <span asp-validation-for="Password" class="text-danger"></span>
                    <input type="text" asp-for="Password" class="form-control" />
                </div>
                <div class="form-group">
                    <label>Şifre Tekrar</label>
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    <input type="text" asp-for="ConfirmPassword" class="form-control" />
                </div>
                <div class="form-group">
                    <label>E-mail</label>
                    <span asp-validation-for="Mail" class="text-danger"></span>
                    <input type="text" asp-for="Mail" class="form-control" />
                </div>
                <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                <div class="mt-3">
                    <button class="btn-primary">Kayıt Ol</button>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</body>

</html>
